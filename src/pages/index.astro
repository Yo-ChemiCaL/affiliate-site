---
import BaseLayout from '../layouts/BaseLayout.astro';
import ProductCard from '../components/ProductCard.astro';
import type { Product } from '../components/ProductCard.astro';
import { url } from '../lib/url';
import productsData from '../data/products.json';

const products = productsData as Product[];
const featuredProducts = products.filter((p) => p.featured);
const latestProducts = [...products].sort(
  (a, b) => new Date(b.publishedAt).getTime() - new Date(a.publishedAt).getTime()
);

const categories = [...new Set(products.map((p) => p.category))];
---

<BaseLayout
  title="おすすめ商品レビュー | Amazon・A8.netアフィリエイト厳選商品"
  description="テレワーク・スマートホーム・ガジェットなどのおすすめ商品を厳選紹介。Amazon・公式サイトの最安値でお得に購入できます。"
>
  <!-- Hero -->
  <section class="hero">
    <div class="container">
      <h1 class="hero-title">本当に良いものだけ紹介します</h1>
      <p class="hero-subtitle">
        Amazon・公式サイトで購入できる厳選おすすめ商品をレビュー。<br />
        コスパ・品質・使いやすさで選びました。
      </p>
      <div class="hero-stats">
        <div class="stat"><strong>{products.length}</strong><span>商品掲載中</span></div>
        <div class="stat"><strong>{categories.length}</strong><span>カテゴリ</span></div>
        <div class="stat"><strong>毎日</strong><span>更新</span></div>
      </div>
    </div>
  </section>

  <!-- Featured Products -->
  {featuredProducts.length > 0 && (
    <section class="section">
      <div class="container">
        <h2 class="section-title">
          <span class="title-icon">★</span> 注目商品ピックアップ
        </h2>
        <div class="product-grid">
          {featuredProducts.map((product) => (
            <ProductCard product={product} />
          ))}
        </div>
      </div>
    </section>
  )}

  <!-- Category Filter -->
  <section class="section section-categories">
    <div class="container">
      <h2 class="section-title">カテゴリから探す</h2>
      <div class="category-list">
        {categories.map((cat) => (
          <a href={url(`/category/${encodeURIComponent(cat)}/`)} class="category-badge">
            {cat} ({products.filter((p) => p.category === cat).length})
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- Latest Products -->
  <section class="section">
    <div class="container">
      <h2 class="section-title">最新の商品レビュー</h2>
      <div class="product-grid">
        {latestProducts.map((product) => (
          <ProductCard product={product} />
        ))}
      </div>
    </div>
  </section>

  <!-- Affiliate Disclosure -->
  <div class="container">
    <p class="disclosure">
      ※ 当サイトはAmazonアソシエイト・プログラムおよびA8.netアフィリエイトプログラムに参加しています。
      商品リンクから購入いただいた場合、サイト運営者が報酬を受け取ることがあります。
    </p>
  </div>
</BaseLayout>

<style>
  .hero {
    background: linear-gradient(135deg, var(--color-secondary) 0%, #2d2d5e 100%);
    color: #fff;
    padding: 64px 0 48px;
    text-align: center;
  }

  .hero-title {
    font-size: clamp(1.6rem, 4vw, 2.4rem);
    font-weight: 900;
    line-height: 1.3;
    margin-bottom: 16px;
  }

  .hero-subtitle {
    font-size: 1rem;
    color: rgba(255,255,255,0.8);
    line-height: 1.7;
    margin-bottom: 32px;
  }

  .hero-stats {
    display: flex;
    justify-content: center;
    gap: 40px;
  }

  .stat {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 4px;
  }

  .stat strong {
    font-size: 2rem;
    font-weight: 900;
    color: var(--color-accent);
    line-height: 1;
  }

  .stat span {
    font-size: 0.8rem;
    color: rgba(255,255,255,0.7);
  }

  .section {
    padding: 48px 0;
  }

  .section-categories {
    background-color: #fff;
  }

  .section-title {
    font-size: 1.4rem;
    font-weight: 800;
    margin-bottom: 24px;
    padding-bottom: 12px;
    border-bottom: 3px solid var(--color-primary);
    display: flex;
    align-items: center;
    gap: 8px;
  }

  .title-icon {
    color: var(--color-accent);
  }

  .category-list {
    display: flex;
    flex-wrap: wrap;
    gap: 12px;
  }

  .category-badge {
    display: inline-block;
    padding: 8px 18px;
    background-color: var(--color-bg);
    border: 2px solid var(--color-border);
    border-radius: 24px;
    font-size: 0.88rem;
    font-weight: 600;
    color: var(--color-text);
    transition: all var(--transition);
  }

  .category-badge:hover {
    border-color: var(--color-primary);
    background-color: var(--color-primary);
    color: #fff;
  }

  .disclosure {
    font-size: 0.75rem;
    color: var(--color-text-muted);
    padding: 16px 0 32px;
    line-height: 1.6;
  }
</style>
