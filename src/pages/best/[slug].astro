  .criteria-text { font-size: 0.88rem; line-height: 1.7; color: var(--color-text-muted); }
  .criteria-tip { font-size: 0.85rem; margin-top: 8px; padding: 8px 12px; background: #fffbf0; border-radius: 4px; color: var(--color-text); line-height: 1.6; }

  /* FAQ */
