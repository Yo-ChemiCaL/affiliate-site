  .policy-footnote a { color: var(--color-primary); }

  @media (max-width: 640px) {
    .pick-inner { flex-direction: column; }
    .product-detail-head { flex-direction: column; }
    .pros-cons { grid-template-columns: 1fr; }
  }
</style>
